<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">

        <RadioGroup
            android:id="@+id/rg_group"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/bar_bg"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rb_home"
                style="@style/BottomTabStyle"
                android:checked="true"
                android:drawableTop="@drawable/bar_home_selector" />

            <RadioButton
                android:id="@+id/rb_search"
                style="@style/BottomTabStyle"
                android:drawableTop="@drawable/bar_search_normal" />

            <RadioButton
                android:id="@+id/rb_cart"
                style="@style/BottomTabStyle"
                android:drawableTop="@drawable/bar_shopping_selector" />

            <RadioButton
                android:id="@+id/rb_account"
                style="@style/BottomTabStyle"
                android:drawableTop="@drawable/bar_account_selector" />

            <RadioButton
                android:id="@+id/rb_more"
                style="@style/BottomTabStyle"
                android:drawableTop="@drawable/bar_more_selector" />
        </RadioGroup>


    <TextView
        android:id="@id/textShopCarNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="18.0dip"
        android:layout_marginLeft="220.0dip"
        android:background="@drawable/number_bg"
        android:gravity="center"
        android:paddingBottom="7.0dip"
        android:paddingLeft="7.0dip"
        android:paddingRight="7.0dip"
        android:paddingTop="1.0dip"
        android:textColor="#ffffffff"
        android:textSize="12.0sp"
        android:textStyle="bold" />

</merge>